@model SanaSDB3.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "TODO List";
}

<style>
    .completed-table {
        background-color: #f2f2f2;
    }

    .completed-task td:not(:last-child, :first-child) {
        text-decoration: line-through;
        color: #adadad;
    }

    .flex {
        display: flex;
        align-items: end;
    }

</style>

<h1 class="text-center">TODO List</h1>

<h2>Create Task</h2>
<form asp-action="CreateTask" method="post">
    <div class="row flex">

        <div class="form-group col-5">
            <label asp-for="NewTask.Name" class="control-label">Name</label>
            <input asp-for="NewTask.Name" class="form-control" />
            <span asp-validation-for="NewTask.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <label asp-for="NewTask.DueDate" class="control-label">Due Date</label>
            <input asp-for="NewTask.DueDate" class="form-control" />
            <span asp-validation-for="NewTask.DueDate" class="text-danger"></span>
        </div>
        <div class="form-group col-2">
            <label asp-for="NewTask.CategoryId" class="control-label">Category</label>
            <select asp-for="NewTask.CategoryId" class="form-control">
                <option value="">Select Category</option>
                @if (ViewBag.CategoryId != null)
                {
                    foreach (var category in ViewBag.CategoryId)
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="NewTask.CategoryId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary col-2">Create</button>
    </div>
</form>

<h2>List</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Completed
            </th>
            <th>
                Name
            </th>
            <th>
                DueDate
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TaskList.Where(t => !t.Completed))
        {
            <tr>
                <td>
                    <form id="form-@item.Id" asp-action="TaskComplete" asp-route-id="@item.Id" method="post">
                        <input class="form-check-input" type="checkbox" id="checkbox-@item.Id" name="completed" onchange="submitForm(@item.Id)"
                        @if (item.Completed)
                        {
                            <text>checked</text>
                        }>
                        <label for="checkbox-@item.Id"></label>
                    </form>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                     </td>
            </tr>
        }
    </tbody>
    <tbody class="completed-table">
        @foreach (var item in Model.TaskList.Where(t => t.Completed))
        {
            <tr class="completed-task">
                <td>
                    <form id="form-@item.Id" asp-action="TaskComplete" asp-route-id="@item.Id" method="post">
                        <input class="form-check-input" type="checkbox" id="checkbox-@item.Id" name="completed" onchange="submitForm(@item.Id)"
                        @if (item.Completed)
                        {
                            <text>checked</text>
                        }>
                        <label for="checkbox-@item.Id"></label>
                    </form>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="font-size:25px;"><i class="fa fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" type="submit"><i class="fa fa-close" style="font-size:25px; color:red;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>



<script>
    function submitForm(taskId) {
        document.getElementById("form-" + taskId).submit();
    }
</script>


